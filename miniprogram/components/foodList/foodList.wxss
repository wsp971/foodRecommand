.food-list{
  background: #fff;
  width: 100%;
  padding: 5px;
  margin-top: 5px;
}
.food-item{
  height: 220rpx;
  border-bottom: 1px solid #f1f1f1;
  display:flex;
  flex-wrap: nowrap;
  justify-items: space-between;
}
.food-item:last-child{
 border-bottom:none;
}

.food-item-avater{
  width: 160rpx;
  height: 160rpx;
}

.food-item-desc{
  flex:1;
  max-width: 560rpx;
  padding: 0 5px;
}

.food-item-title{
font-size:18px;
font-weight: bold;
overflow:hidden;
text-overflow: ellipsis;
white-space:nowrap;
color: #1c2438;
}

.food-item-content{
  font-size:12px;
  min-height:26rpx;
  color: #495060;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.food-item-others{
   font-size: 14px;
   position: relative;
}

.food-item-price{
  color:#ed3f14;
  font-size: 16px;
}

.food-item-price-del{
  font-size:12px;
  color:grey;
  text-decoration:line-through;
  /* text-decoration */
}

.food-item-favdesc{
position:absolute;
right: 10px;
top:0;
}
.food-item-favdesc.fav{
color:red;
}


