.freeorder_list {
  padding: 0 20rpx;
  margin: -10rpx 0;
  display: flex;
  flex-wrap: wrap;
}

.freeorder_list .item {
  position: relative;
  width: calc(50% - 20rpx);
  box-sizing: border-box;
  background-color: #fff;
  vertical-align: top;
  border-radius: 8rpx;
  margin: 10rpx;
  padding: 30rpx;
}

.freeorder_list .item_buttonreset {
  padding: 0;
  border: 0 !important;
  border-radius: 0;
  line-height: 1.5;
}

.freeorder_list .item_image {
  height: 275rpx;
  width: 275rpx;
}

.freeorder_list .item_cover {
  position: relative;
  height: 0;
  overflow: hidden;
  padding-top: 100%;
}

.freeorder_list .item_cover_image {
  position: absolute;
  left: 0;
  top: 0;
  border-radius: .1rem .1rem 0 0;
}

.freeorder_list .item_info {
  padding-top: 11rpx;
  position: relative;
  text-align: left;
}

.freeorder_list .item_info_name {
  margin-bottom: 8rpx;
  height: 42rpx;
  color: #333333;
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.freeorder_list .item_info_price {
  color: #e93b3d;
  font-size: 24rpx;
}

.freeorder_list .item_info_price_num {
  margin-left: 10rpx;
  font-size: 24rpx;
  word-spacing: -5rpx;
}

.freeorder_list .item_info_price_num .em {
  font-size: 32rpx;
}

.freeorder_list .item_info_price_del {
  margin-left: 5rpx;
  color: #999999;
  font-size: 24rpx;
  text-decoration: line-through;
}

.freeorder_list .item_info_stock {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #999999;
}

.freeorder_list .shop-item-tags{
 margin: 0 5px;
}
