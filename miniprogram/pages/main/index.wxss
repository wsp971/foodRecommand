/* pages/test/index.wxss */
page{
  padding-bottom:50px;
}

.footer{
   position: fixed;
   bottom:0;
   left:0;
}

.main-container{
  margin: 15px;
  /* padding:15rpx; */
  height: 80vh;
  background: #ffffff;
  border-radius: 20rpx;
}
.location{
  /* margin: 10px; */
  /* background: #ffcccc; */
}
.main-pic{
  width: 100%;
  height: 700rpx;
  margin: auto;
  border-radius: 20rpx 20rpx 0 0 ;
}
.text-wrap{
  padding: 0 10px;
}
.main-title{
  font-size:18px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  color: #1c2438;
}

.main-desc{
  font-size:12px;
  color: #495060;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}
.main-item-tags{
   margin: 0 5px;
}
/* 列表相关 */

.shop-list{
    background: #fff;
    width: 100%;
    padding: 5px;
    margin-top: 5px;
}
.shop-item{
    height: 220rpx;
    border-bottom: 1px solid #f1f1f1;
    display:flex;
    flex-wrap: nowrap;
    justify-items: space-between;
}
.shop-item:last-child{
   border-bottom:none;
}

.shop-item-avater{
    width: 160rpx;
    height: 160rpx;
}

.shop-item-desc{
    flex:1;
    max-width: 560rpx;
    padding: 0 5px;
}

.shop-item-title{
  font-size:18px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  color: #1c2438;
}

.shop-item-content{
  font-size:12px;
  color: #495060;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.shop-item-others{
  font-size: 14px;
  position: relative;
}

.shop-item-price{
  color:#ed3f14;
}

.shop-item-favdesc{
  position:absolute;
  right: 10px;
  top:0;
}
.shop-item-favdesc.fav{
  color:red;
}

.shop-item-tags{
   margin: 0 5px;
}
.distance{
   
   margin:5px;
   float: right;
   color:#ccc;
   font-size: 12px;
   border-radius: 5px;
   /* background: #f3cdcd; */
}

