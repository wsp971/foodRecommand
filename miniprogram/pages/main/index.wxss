.main-pic{
  width: 100%;
  height: 700rpx;
  margin: auto;
  border-radius: 20rpx 20rpx 0 0 ;
}
.text-wrap{
  padding: 0 10px;
}
.main-title{
  font-size:18px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  color: #1c2438;
}

.main-desc{
  font-size:12px;
  color: #495060;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.main-item-tags{
   margin: 0 5px;
}

.healthy-module{
  text-align: center;
  padding: 0 10px;
  height: 200px;
  background:#ffffff;
}

.health-des{
  font-size:12px;
  color: #cccccc;
}
.health-link{
  color:#ed3f14;
}

