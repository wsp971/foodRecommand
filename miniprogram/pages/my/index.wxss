/* pages/test/index.wxss */
page{
  padding-bottom:50px;
}

.my-info{
  padding: 15px;
  padding-bottom: 0;
  display: inline-flex;
  flex-wrap: nowrap;
  /* align-items:center; */
  justify-content: flex-start;
  font-size: 14px;
}
.avator{
  width: 100rpx;
  height:100rpx;
  border-radius: 50%;
  margin-right: 15px;
  
}
.user-button{
  background:#ddd;
  position:static;
  display:inline-block;
  width: 100 rpx;
  height: 100 rpx;
  border-radius: 100rpx;
  margin-right: 15px;
  font-size: 10px;
}

.head-info{
  /* border: none; */
  border-top:none !important;
}

.cell-panel-demo{
    display: block;
    margin-top: 15px;
}

.shop-list{
    background: #fff;
    width: 100%;
    padding: 5px;
    margin-top: 5px;
}
.shop-item{
    height: 220rpx;
    border-bottom: 1px solid #f1f1f1;
    display:flex;
    flex-wrap: nowrap;
    justify-items: space-between;
}
.shop-item:last-child{
   border-bottom:none;
}

.shop-item-avater{
    width: 160rpx;
    height: 160rpx;
}

.shop-item-desc{
    flex:1;
    max-width: 560rpx;
    padding: 0 5px;
}

.shop-item-title{
  font-size:18px;
  font-weight: bold;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  color: #1c2438;
}

.shop-item-content{
  font-size:12px;
  color: #495060;
  overflow: hidden;
  text-overflow: ellipsis;
  display:-webkit-box;
  -webkit-line-clamp:2;
  -webkit-box-orient: vertical;
}

.shop-item-others{
  font-size: 14px;
  position: relative;
}

.shop-item-price{
  color:#ed3f14;
}

.shop-item-favdesc{
  position:absolute;
  right: 10px;
  top:0;
}
.shop-item-favdesc.fav{
  color:red;
}

.shop-item-tags{
   margin: 0 5px;
}
